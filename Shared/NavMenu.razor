<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Standings
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/pastevents" Match="NavLinkMatch.Prefix">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Past Events
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/historical" Match="NavLinkMatch.Prefix">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Historical
            </NavLink>
        </div>
